{
  "name": "lightlink-zk-oracle-chromion",
  "version": "1.0.0",
  "description": "Decentralized Light-Client via ZK Proof Aggregation for Chromion Hackathon 2025",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "compile": "hardhat compile",
    "deploy": "hardhat ignition deploy ./ignition/modules/ZKOracle.js",
    "node": "hardhat node",
    "build-circuits": "npm run build:multiplier && npm run build:merkle",
    "build:multiplier": "circom circuits/multiplier.circom --r1cs --wasm --sym -o artifacts/circuits/",
    "build:merkle": "circom circuits/merkle_proof.circom --r1cs --wasm --sym -o artifacts/circuits/",
    "generate-witness": "node scripts/generate-witness.js",
    "setup-ceremony": "node scripts/setup-ceremony.js",
    "generate-proof": "node scripts/generate-proof.js",
    "dev": "hardhat node & npm run deploy",
    "clean": "hardhat clean && rm -rf artifacts/circuits"
  },
  "keywords": [
    "chainlink",
    "zk-snark",
    "oracle",
    "cross-chain",
    "proof-aggregation",
    "chromion",
    "hackathon"
  ],
  "author": "LightLink Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "circomlib": "^2.0.5",
    "ethers": "^6.4.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^2.0.0",
    "snarkjs": "^0.7.3",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "dotenv": "^16.3.1",
    "ffjavascript": "^0.2.63"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
