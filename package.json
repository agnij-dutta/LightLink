{
  "name": "lightlink-zk-oracle-chromion",
  "version": "1.0.0",
  "description": "Decentralized Light-Client via ZK Proof Aggregation for Chromion Hackathon 2025",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "hardhat test",
    "compile": "hardhat compile",
    "deploy": "hardhat ignition deploy ./ignition/modules/ZKOracle.js",
    "deploy:fuji": "hardhat run scripts/deploy.js --network fuji",
    "node": "hardhat node",
    "build-circuits": "npm run build:proof-aggregator && npm run build:merkle && npm run build:multiplier",
    "build:proof-aggregator": "circom circuits/proof_aggregator.circom --r1cs --wasm --sym -o artifacts/circuits/ -l node_modules",
    "build:merkle": "circom circuits/merkle_proof.circom --r1cs --wasm --sym -o artifacts/circuits/ -l node_modules",
    "build:multiplier": "circom circuits/multiplier.circom --r1cs --wasm --sym -o artifacts/circuits/ -l node_modules",
    "generate-witness": "node scripts/generate-witness.js",
    "setup-ceremony": "node scripts/setup-ceremony.js",
    "generate-proof": "node scripts/generate-proof.js",
    "setup-groth16": "node scripts/circuit-tools.cjs setup-groth16",
    "generate-verifier": "node scripts/circuit-tools.cjs generate-verifier",
    "test-proof": "node scripts/circuit-tools.cjs test-proof",
    "dev": "hardhat node & npm run deploy",
    "clean": "hardhat clean && rm -rf artifacts/circuits",
    "cli": "node cli/lightlink.js",
    "deploy-testnet": "node scripts/deploy-testnet.js",
    "quick-deploy": "node scripts/quick-deploy.js",
    "test-deployment": "node scripts/test-deployment.js",
    "verify-contracts": "node scripts/verify-contracts.js"
  },
  "keywords": [
    "chainlink",
    "zk-snark",
    "oracle",
    "cross-chain",
    "proof-aggregation",
    "chromion",
    "hackathon",
    "groth16",
    "nova"
  ],
  "author": "LightLink Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "circomlib": "^2.0.5",
    "ethers": "^6.4.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^2.0.0",
    "snarkjs": "^0.7.3",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@chainlink/contracts-ccip": "^1.6.0",
    "@openzeppelin/contracts": "^5.3.0",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "ffjavascript": "^0.2.63",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
